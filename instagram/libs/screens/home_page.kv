#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import StoryCreator libs.components.story_creator.StoryCreator
#:import BottomNav libs.components.bottom_nav.BottomNav

<HomePage>:
    md_bg_color: get_color_from_hex("#FFFFFF")

    MDBoxLayout:
        orientation: 'vertical'

        AppBar:

        # Body
        MDBoxLayout:

            # md_bg_color: get_color_from_hex("#F1F000")
            
            ScrollView: 
                bar_width: 0

                # post + stories container
                MDBoxLayout:
                    adaptive_height: True
                    # md_bg_color: get_color_from_hex("#F1F000")

                    # post container
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        id: timeline
                        # md_bg_color: get_color_from_hex("#F1F000")
                    
                        # Stories
                        ScrollView:
                            size_hint_y: None
                            height: 110
                            bar_width: 0

                            MDBoxLayout:
                                adaptive_width: True
                                # height: 100
                                spacing: 5
                                padding: 5

                                # Story creator: for user
                                StoryCreator:
                                    avatar: root.profile_picture

                                MDBoxLayout:
                                    adaptive_width: True 
                                    padding: 5
                                    spacing: 5
                                    id: stories

                        MDSeparator:

        # Bottom Nav Bar
        BottomNav:
            avatar: root.profile_picture


    

                        



        

      